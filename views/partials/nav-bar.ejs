<nav>
    <a href="/feed" class="item" aria-label="Página inicial">
        <i class="fi fi-rc-home"></i>
    </a>
    <a href="#" class="item" aria-label="Explorar">
        <i class="fi fi-br-compass-alt"></i>
    </a>
    <button id="btn-criar-postagem" class="item" aria-label="Criar Postagem">
        <i class="fi fi-br-edit"></i>
    </button>
    <a href="#" class="item" aria-label="Notificações">
        <i class="fi fi-br-bell"></i>
    </a>
    <a href="#" class="item" aria-label="Configurações">
        <i class="fi fi-rc-settings"></i>
    </a>
</nav>

<div id="form-overlay" class="form-overlay"></div>

<form id="form-criar-postagem" action="/criar-post" method="post" enctype="multipart/form-data">
    <button type="button" id="btn-fechar-criar-post" class="btn-fechar" aria-label="Fechar">&times;</button>
    <h3>Criar Nova Postagem</h3>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
            <% if (error === 'missing_fields') { %>
                ⚠ Por favor, preencha todos os campos obrigatórios.
            <% } else if (error === 'no_content') { %>
                ⚠ Por favor, adicione um conteúdo ou uma imagem.
            <% } else if (error === 'creation_failed') { %>
                ✗ Erro ao criar postagem. Tente novamente.
            <% } else { %>
                ✗ <%= error %>
            <% } %>
        </div>
    <% } %>
    
    <div class="campo-forms">
        <label for="titulo">Título *</label>
        <input type="text" id="titulo" name="titulo" required placeholder="Digite o título da sua postagem">
    </div>
    
    <div class="campo-forms">
        <label for="conteudo">Conteúdo</label>
        <textarea id="conteudo" name="conteudo" placeholder="Descreva sua obra ou pensamento..." rows="4"></textarea>
    </div>
    
    <div class="campo-forms">
        <label for="imagem">Imagens</label>
        <input type="file" id="imagem" name="imagem" accept="image/*">
        <small>Formatos aceitos: JPG, PNG, GIF (máx. 5MB cada)</small>
        <div id="image-preview-list"></div>
    </div>
    
    <div class="campo-forms">
        <label for="categoria">Categoria *</label>
        <select id="categoria" name="categoria" required>
            <option value="">Selecione uma categoria</option>
            <option value="pintura">Pintura</option>
            <option value="poema">Poema</option>
            <option value="fotografia">Fotografia</option>
            <option value="escultura">Escultura</option>
            <option value="digital">Arte Digital</option>
            <option value="outros">Outros</option>
        </select>
    </div>
    
    <div class="form-buttons">
        <button type="button" id="btn-cancelar" class="btn-secondary">Cancelar</button>
        <button type="submit" class="btn-primary">Criar Postagem</button>
    </div>
</form>
